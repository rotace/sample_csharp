<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleUiGallery.Views.View.ControlPage"
             Title="ControlPage">
    <HorizontalStackLayout Margin="5" Spacing="5">
        <VerticalStackLayout  Margin="5" Spacing="5">
            <Button Text="Button"/>
            <CheckBox/>
            <Entry/>
            <Editor/>
        </VerticalStackLayout>

        <VerticalStackLayout  Margin="5" Spacing="5">
            <Switch/>
            <Slider/>
            <Stepper/>
            <RadioButton/>
        </VerticalStackLayout>

        <VerticalStackLayout  Margin="5" Spacing="5">
            <Picker/>
            <DatePicker/>
            <TimePicker/>
            <ProgressBar Progress="0.3"/>
        </VerticalStackLayout>

    </HorizontalStackLayout>
</ContentPage>