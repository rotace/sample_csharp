<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleUiGallery.Views.Layout.GridPage"
             Title="GridPage">
    <Grid
        Margin="5" RowSpacing="5" ColumnSpacing="5"
        RowDefinitions="Auto, Auto, *"
        ColumnDefinitions="Auto, Auto, *">
        <Button Grid.Row="0" Grid.Column="0" Text="View Area"/>
        <Button Grid.Row="0" Grid.Column="1" Text="View Area"/>
        <Button Grid.Row="0" Grid.Column="2" Text="View Area"/>
        <Button Grid.Row="1" Grid.Column="0" Text="View Area"/>
        <Button Grid.Row="1" Grid.Column="1" Text="View Area"/>
        <Button Grid.Row="1" Grid.Column="2" Text="View Area"/>
        <Button Grid.Row="2" Grid.Column="0" Text="View Area"/>
        <Button Grid.Row="2" Grid.Column="1" Text="View Area"/>
        <Button Grid.Row="2" Grid.Column="2" Text="View Area"/>
    </Grid>
</ContentPage>